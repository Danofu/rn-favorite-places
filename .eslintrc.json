{
  "env": { "es2021": true, "node": true },
  "extends": ["airbnb", "airbnb/hooks", "plugin:react/jsx-runtime", "prettier"],
  "overrides": [],
  "parserOptions": { "ecmaVersion": "latest", "sourceType": "module" },
  "plugins": ["react"],
  "rules": {
    "global-require": "off",
    "import/prefer-default-export": "warn",
    "no-underscore-dangle": ["error", { "allow": ["_array"] }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-use-before-define": ["error", { "functions": false, "variables": false }],
    "react-hooks/exhaustive-deps": "warn",
    "react/forbid-prop-types": "warn",
    "react/jsx-filename-extension": ["error", { "extensions": [".js", ".jsx"] }],
    "react/jsx-props-no-spreading": ["error", { "custom": "ignore" }],
    "react/no-unstable-nested-components": ["error", { "allowAsProps": true }],
    "react/style-prop-object": ["error", { "allow": ["StatusBar"] }],

    "react/prop-types": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".android.js", ".android.jsx", ".ios.js", ".ios.jsx", ".js", ".jsx"],
        "paths": ["."]
      }
    }
  }
}
